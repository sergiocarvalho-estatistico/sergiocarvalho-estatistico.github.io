---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl } from '../i18n/index';

interface Props {
  title: string;
  description: string;
  image?: string;
}
const { title, description, image } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---
<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} image={image} lang={lang} />
  </head>
  <body class="bg-white dark:bg-slate-900 text-slate-900 dark:text-white min-h-screen flex flex-col transition-colors duration-200">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
