---
interface Props {
  tags: string[];
  class?: string;
}
const { tags, class: className = '' } = Astro.props;
---
<div class={`flex flex-wrap gap-2 ${className}`}>
  {tags.map(tag => (
    <span class="text-xs bg-navy-50 dark:bg-navy-800 text-navy-700 dark:text-navy-300 px-3 py-1 rounded-full border border-navy-100 dark:border-navy-700">
      {tag}
    </span>
  ))}
</div>
