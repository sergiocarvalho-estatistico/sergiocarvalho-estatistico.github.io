---
import { getLangFromUrl, useTranslations, getRouteForLang } from '../i18n/index';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="py-20 md:py-28">
  <div class="max-w-6xl mx-auto px-4 flex flex-col md:flex-row items-center gap-12">
    <div class="flex-1 text-center md:text-left">
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4">
        {t('hero.title')}
      </h1>
      <p class="text-xl md:text-2xl text-navy-600 dark:text-navy-300 font-medium mb-6">
        {t('hero.subtitle')}
      </p>
      <p class="text-slate-600 dark:text-slate-300 text-lg mb-8 max-w-xl">
        {t('hero.description')}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <a href={getRouteForLang(lang, 'projects')} class="bg-navy-600 hover:bg-navy-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
          {t('hero.cta')}
        </a>
        <a href={getRouteForLang(lang, 'about')} class="border border-navy-600 text-navy-600 dark:text-navy-300 dark:border-navy-400 hover:bg-navy-50 dark:hover:bg-navy-900 px-6 py-3 rounded-lg font-medium transition-colors">
          {t('hero.ctaSecondary')}
        </a>
      </div>
    </div>
    <div class="flex-shrink-0">
      <div class="w-56 h-56 md:w-72 md:h-72 rounded-full overflow-hidden border-4 border-navy-200 dark:border-navy-700 shadow-xl">
        <img src="/img/portrait.jpg" alt="SÃ©rgio Carvalho" class="w-full h-full object-cover" />
      </div>
    </div>
  </div>
</section>
