---
interface Props {
  title: string;
  description: string;
  href?: string;
  tags?: string[];
  date?: string;
  type?: 'project' | 'article' | 'recommendation' | 'material';
}
const { title, description, href, tags = [], date, type = 'project' } = Astro.props;
---
<article class="bg-white dark:bg-navy-900 rounded-xl border border-slate-200 dark:border-slate-700 p-6 hover:shadow-lg hover:border-navy-300 dark:hover:border-navy-600 transition-all group">
  {date && <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">{date}</p>}
  <h3 class="text-lg font-semibold text-slate-800 dark:text-white mb-2 group-hover:text-navy-600 dark:group-hover:text-navy-300 transition-colors">
    {href ? <a href={href}>{title}</a> : title}
  </h3>
  <p class="text-slate-600 dark:text-slate-300 text-sm mb-4 line-clamp-3">{description}</p>
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-1.5 mb-4">
      {tags.map(tag => (
        <span class="text-xs bg-navy-50 dark:bg-navy-800 text-navy-600 dark:text-navy-300 px-2 py-0.5 rounded-full">{tag}</span>
      ))}
    </div>
  )}
  {href && (
    <a href={href} class="text-sm text-navy-600 dark:text-navy-400 hover:text-navy-800 dark:hover:text-navy-200 font-medium transition-colors">
      â†’ Ler mais
    </a>
  )}
</article>
