---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '../../../i18n/index';
const t = useTranslations('es');
---
<BaseLayout title="Contacto - Sérgio Carvalho" description="Ponte en contacto con Sérgio Carvalho">
  <div class="max-w-2xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-2">{t('contact.title')}</h1>
    <p class="text-slate-600 dark:text-slate-300 mb-8">{t('contact.subtitle')}</p>
    <div class="bg-white dark:bg-navy-900 rounded-xl border border-slate-200 dark:border-slate-700 p-8 mb-8">
      <div class="flex flex-col gap-4 mb-6">
        <div class="flex items-center gap-3">
          <span class="text-slate-700 dark:text-slate-300"><strong>{t('contact.emailLabel')}:</strong> email@placeholder.com</span>
        </div>
        <div class="flex items-center gap-3">
          <a href="https://linkedin.com/in/placeholder" class="text-navy-600 dark:text-navy-400 hover:underline"><strong>{t('contact.linkedinLabel')}:</strong> linkedin.com/in/placeholder</a>
        </div>
      </div>
    </div>
    <form action="mailto:email@placeholder.com" method="post" enctype="text/plain" class="bg-white dark:bg-navy-900 rounded-xl border border-slate-200 dark:border-slate-700 p-8">
      <div class="flex flex-col gap-6">
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2" for="name">{t('contact.name')}</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-navy-800 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-navy-500" />
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2" for="email">{t('contact.email')}</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-navy-800 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-navy-500" />
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2" for="message">{t('contact.message')}</label>
          <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-navy-800 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-navy-500 resize-none"></textarea>
        </div>
        <button type="submit" class="bg-navy-600 hover:bg-navy-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">{t('contact.send')}</button>
      </div>
    </form>
  </div>
</BaseLayout>
