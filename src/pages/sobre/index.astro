---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/index';
const t = useTranslations('pt');
---
<BaseLayout title="Sobre - Sérgio Carvalho" description="Sobre Sérgio Carvalho, Cientista de Dados e Estatístico">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row gap-12 items-start">
      <div class="flex-shrink-0">
        <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-navy-200 dark:border-navy-700 shadow-lg">
          <picture>
            <source srcset="/img/portrait.webp" type="image/webp" />
            <img src="/img/portrait.jpg" alt="Sérgio Carvalho" class="w-full h-full object-cover" />
          </picture>
        </div>
      </div>
      <div class="flex-1">
        <h1 class="text-3xl font-bold mb-6">{t('about.title')}</h1>
        <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">{t('about.bio')}</p>
        <h2 class="text-xl font-semibold mb-4">Skills</h2>
        <div class="flex flex-wrap gap-2 mb-6">
          {['R', 'Python', 'SQL', 'Estatística Bayesiana', 'Machine Learning', 'Data Visualization', 'Análise Estatística', 'Modelagem Preditiva'].map(skill => (
            <span class="bg-navy-50 dark:bg-navy-800 text-navy-700 dark:text-navy-300 px-3 py-1 rounded-full text-sm border border-navy-100 dark:border-navy-700">{skill}</span>
          ))}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
